      "cell_type": "code",
      "source": [
        "import csv\n",
        "\n",
        "# Define the structure of the movie data\n",
        "class Movie:\n",
        "    def __init__(self, title, director, year, genre, rating):\n",
        "        self.title = title\n",
        "        self.director = director\n",
        "        self.year = year\n",
        "        self.genre = genre\n",
        "        self.rating = rating\n",
        "\n",
        "# Function to add movies (simulated for demonstration purposes)\n",
        "def get_movies():\n",
        "    # Simulated movie data\n",
        "    movies = [\n",
        "        Movie(\"The Shawshank Redemption\", \"Frank Darabont\", 1994, \"Drama\", 9.3),\n",
        "        Movie(\"The Godfather\", \"Francis Ford Coppola\", 1972, \"Crime\", 9.2),\n",
        "        Movie(\"The Dark Knight\", \"Christopher Nolan\", 2008, \"Action\", 9.0),\n",
        "        Movie(\"Pulp Fiction\", \"Quentin Tarantino\", 1994, \"Crime\", 8.9),\n",
        "        Movie(\"Forrest Gump\", \"Robert Zemeckis\", 1994, \"Drama\", 8.8),\n",
        "    ]\n",
        "    return movies\n",
        "\n",
        "# Save movies to a CSV file\n",
        "def save_to_csv(movies, filename):\n",
        "    with open(filename, mode='w', newline='', encoding='utf-8') as file:\n",
        "        writer = csv.writer(file)\n",
        "        # Write header row\n",
        "        writer.writerow([\"Title\", \"Director\", \"Year\", \"Genre\", \"Rating\"])\n",
        "        # Write movie data\n",
        "        for movie in movies:\n",
        "            writer.writerow([movie.title, movie.director, movie.year, movie.genre, movie.rating])\n",
        "\n",
        "# Display the contents of the CSV file\n",
        "def display_csv(filename):\n",
        "    print(f\"\\nContents of {filename}:\")\n",
        "    with open(filename, mode='r', encoding='utf-8') as file:\n",
        "        reader = csv.reader(file)\n",
        "        for row in reader:\n",
        "            print(\", \".join(row))\n",
        "\n",
        "# Main script\n",
        "def main():\n",
        "    movies = get_movies()  # Simulate getting movie data\n",
        "    filename = \"movies_database.csv\"\n",
        "\n",
        "    # Save movies to CSV\n",
        "    save_to_csv(movies, filename)\n",
        "    print(f\"Data saved to {filename} successfully!\")\n",
        "\n",
        "    # Display the CSV file contents\n",
        "    display_csv(filename)\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
      ],
